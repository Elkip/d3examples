{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "lib": [
            "dom",
            "es6"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "build/",
        "removeComments": true,
        "strict": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true
    },
    "include": [
        "./src/*/*.ts"
    ]
}
